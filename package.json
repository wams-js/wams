{
  "name": "wams",
  "description": "Workspaces Across Multiple Surfaces",
  "version": "1.0.0",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/wams-js/wams"
  },
  "scripts": {
    "build": "parcel build",
    "build:debug": "parcel build --no-optimize",
    "docs": "jsdoc -c .jsdocrc.json",
    "format": "prettier --write src tests examples",
    "format:check": "prettier --check src tests examples",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "prepare": "npm run build",
    "test": "jest",
    "test:debug": "node inspect $(npm bin)/jest --runInBand"
  },
  "dependencies": {
    "canvas-sequencer": "^3.0.6",
    "core-js": "^3.33.2",
    "express": "^4.18.2",
    "normalize-wheel": "^1.0.1",
    "socket.io": "^4.7.2",
    "socket.io-client": "^4.7.2",
    "westures": "^1.1.1"
  },
  "devDependencies": {
    "@babel/core": "^7.23.3",
    "@babel/preset-env": "^7.23.3",
    "arkit": "^1.6.4",
    "docdash": "^2.0.2",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-n": "^16.3.1",
    "eslint-plugin-promise": "^6.1.1",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jsdoc": "^4.0.2",
    "jsdom": "^22.1.0",
    "parcel": "^2.10.3",
    "prettier": "^3.1.0"
  },
  "targets": {
    "client": {
      "source": "src/client.js",
      "distDir": "dist"
    }
  }
}
